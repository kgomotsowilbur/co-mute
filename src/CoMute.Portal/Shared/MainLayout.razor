@inherits MainLayoutPageBase

<MudThemeProvider Theme="this.CurrentTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Color="Color.Transparent" Elevation="0">
        <MudText>CoMute</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
    </MudAppBar>
    <MudDrawer Elevation="0" Color="Color.Transparent" @bind-Open="@_drawerOpen" Anchor="Anchor.End">
        <MudNavMenu Class="pt-3">
            <MudNavLink Href="/" Match="NavLinkMatch.All">Dashboard</MudNavLink>
            <MudNavLink Href="/createCarPoolOpportunity" Icon="@Icons.Filled.AttachMoney">New Car Pool Opportunity</MudNavLink>
            <MudNavLink Href="/signUp" Icon="@Icons.Filled.AttachMoney">New User</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        <MudContainer Class="pt-5" MaxWidth="MaxWidth.ExtraLarge">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>