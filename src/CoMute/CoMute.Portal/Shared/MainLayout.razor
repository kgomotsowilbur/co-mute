@inherits MainLayoutPageBase

<MudThemeProvider Theme="this.CurrentTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Color="Color.Transparent" Elevation="0">
        <MudImage Src="https://averstoragedev.blob.core.windows.net/portalfiles/Aever-fulllogo-00A1F9.png" Height="30" ObjectFit="ObjectFit.ScaleDown" />
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
    </MudAppBar>
    <MudDrawer Elevation="0" Color="Color.Transparent" @bind-Open="@_drawerOpen" Anchor="Anchor.End">
        <MudNavMenu Class="pt-3">
            <MudNavLink Href="/" Match="NavLinkMatch.All">Dashboard</MudNavLink>
            <MudNavLink Href="/teamMembers" Icon="@Icons.Material.Outlined.Person">Team Members</MudNavLink>
            <MudNavLink Href="/newteamMember" Icon="@Icons.Filled.PersonAddAlt">New Team Member</MudNavLink>
            <MudNavLink Href="/funds" Icon="@Icons.Filled.AttachMoney">Funds</MudNavLink>
            <MudNavLink Href="/newFundManager" Icon="@Icons.Filled.AttachMoney">New Fund Manager</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        <MudContainer Class="pt-5" MaxWidth="MaxWidth.ExtraLarge">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>